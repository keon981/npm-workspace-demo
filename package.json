{
  "name": "npm-workspace-demo",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:app1": "npm run dev --workspace @npm-workspace-demo/app1",
    "dev:app2": "npm run dev --workspace @npm-workspace-demo/app2",
    "add:components": "npm install @npm-workspace-demo/components --workspace @npm-workspace-demo/app1 && npm install @npm-workspace-demo/components --workspace @npm-workspace-demo/app2",
    "build": "npm run build:app1 && npm run build:app2",
    "build:components": "npm run build --workspace @npm-workspace-demo/components",
    "build:app1": "npm run build --workspace @npm-workspace-demo/app1",
    "build:app2": "npm run build --workspace @npm-workspace-demo/app2"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "devDependencies": {
    "@types/node": "^22.10.1",
    "vite-plugin-dts": "^4.3.0",
    "vite-tsconfig-paths": "^5.1.3"
  }
}
