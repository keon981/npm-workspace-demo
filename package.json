{
  "name": "npm-workspace-demo",
  "version": "1.0.0",
  "private": true,
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev:host": "npm run dev -w @npm-workspace-demo/host",
    "dev:remote": "npm run dev -w @npm-workspace-demo/remote",
    "add:components": "npm install @npm-workspace-demo/components --workspaces && npm uninstall @npm-workspace-demo/components -w @npm-workspace-demo/components",
    "rm:components": "npm uninstall @npm-workspace-demo/components --workspace",
    "build": "npm run build -ws",
    "build:components": "npm run build -w @npm-workspace-demo/components",
    "build:host": "npm run build -w @npm-workspace-demo/host",
    "build:remote": "npm run build -w @npm-workspace-demo/remote"
  },
